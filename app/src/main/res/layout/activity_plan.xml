<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PlanActivity">


        <androidx.cardview.widget.CardView
            android:id="@+id/workout_img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24sp"
            app:cardCornerRadius="100sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:contentDescription="@string/workout_img"
                android:scaleType="centerCrop"
                android:src="@drawable/workout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginHorizontal="24sp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/workout_img_card"
            app:layout_constraintLeft_toRightOf="@id/workout_img_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/workout_img_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/hello_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dummy_date" />

        </LinearLayout>


        <TextView
            android:id="@+id/my_plan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/my_plan"
            android:textColor="@color/dark_text"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workout_img_card" />


        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/july_2021"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_plan_txt" />

        <TextView
            android:id="@+id/recent_plan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:text="@string/recent_plan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time2" />

        <TextView
            android:id="@+id/see_all_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:text="@string/see_all"
            android:textColor="#C54B25"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time2"
            tools:layout_editor_absoluteX="-2sp" />


        <TextView
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/july_2021"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recent_plan_txt" />

        <androidx.cardview.widget.CardView
            android:id="@+id/week_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            app:cardBackgroundColor="@color/detail_card_background"
            app:cardCornerRadius="36sp"
            app:layout_constraintTop_toBottomOf="@id/time3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12sp"
                    android:layout_marginTop="36sp"
                    android:text="@string/week_1"
                    android:textColor="@color/dark_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:text="@string/body_weight"
                    android:textColor="@color/dark_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:text="@string/workouts_1_of_5"
                    android:textColor="@color/dark_text" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    app:cardCornerRadius="24sp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12sp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/plan4_img_card"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_margin="12sp"
                            app:cardCornerRadius="8sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/workout_img"
                                android:scaleType="centerCrop"
                                android:src="@drawable/workout" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/day4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12sp"
                            android:text="@string/day1"
                            android:textColor="@color/dark_text"
                            app:layout_constraintLeft_toRightOf="@id/plan4_img_card"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/time_img4"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_margin="12sp"
                            android:contentDescription="@string/time"
                            android:src="@drawable/ic_baseline_access_time_24"
                            app:layout_constraintLeft_toRightOf="@id/plan4_img_card"
                            app:layout_constraintTop_toBottomOf="@id/day4" />

                        <TextView
                            android:id="@+id/like_btn_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12sp"
                            android:text="@string/_02_48"
                            app:layout_constraintLeft_toRightOf="@id/time_img4"
                            app:layout_constraintTop_toBottomOf="@id/day4" />

                        <ImageView
                            android:id="@+id/favorite_btn_4"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_margin="12sp"
                            android:contentDescription="@string/favorite"
                            android:src="@drawable/ic_baseline_favorite_border_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/play_btn_4"
                            android:layout_width="36sp"
                            android:layout_height="36sp"
                            android:layout_margin="12sp"
                            android:contentDescription="@string/play"
                            android:src="@drawable/ic_baseline_play_circle_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/favorite_btn_4"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/week_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp">

                <ImageView
                    android:id="@+id/plan1_img"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/workout_img"
                    android:scaleType="centerCrop"
                    android:src="@drawable/workout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/day1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:text="@string/day1"
                    app:layout_constraintLeft_toRightOf="@id/plan1_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/time_img1"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/time"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:layout_constraintLeft_toRightOf="@id/plan1_img"
                    app:layout_constraintTop_toBottomOf="@id/day1" />

                <TextView
                    android:id="@+id/like_btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:text="@string/_02_48"
                    app:layout_constraintLeft_toRightOf="@id/time_img1"
                    app:layout_constraintTop_toBottomOf="@id/day1" />

                <ImageView
                    android:id="@+id/favorite_btn_1"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/favorite"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/play_btn_1"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/play"
                    android:src="@drawable/ic_baseline_play_circle_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/favorite_btn_1"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp">

                <ImageView
                    android:id="@+id/plan2_img"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/workout_img"
                    android:scaleType="centerCrop"
                    android:src="@drawable/workout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:text="@string/day2"
                    android:textColor="@color/dark_text"
                    app:layout_constraintLeft_toRightOf="@id/plan2_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/time_img2"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/time"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:layout_constraintLeft_toRightOf="@id/plan2_img"
                    app:layout_constraintTop_toBottomOf="@id/day2" />

                <TextView
                    android:id="@+id/like_btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:text="@string/_02_48"
                    app:layout_constraintLeft_toRightOf="@id/time_img2"
                    app:layout_constraintTop_toBottomOf="@id/day2" />

                <ImageView
                    android:id="@+id/favorite_btn_2"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/favorite"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/play_btn_2"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/play"
                    android:src="@drawable/ic_baseline_play_circle_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/favorite_btn_2"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp">

                <ImageView
                    android:id="@+id/plan3_img"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/workout_img"
                    android:scaleType="centerCrop"
                    android:src="@drawable/workout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/day3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:text="@string/day3"
                    android:textColor="@color/dark_text"
                    app:layout_constraintLeft_toRightOf="@id/plan3_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/time_img3"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_margin="12sp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16sp"
                    android:contentDescription="@string/time"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:layout_constraintLeft_toRightOf="@id/plan3_img"
                    app:layout_constraintTop_toBottomOf="@id/day3" />

                <TextView
                    android:id="@+id/like_btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:text="@string/_02_48"
                    app:layout_constraintLeft_toRightOf="@id/time_img3"
                    app:layout_constraintTop_toBottomOf="@id/day3" />

                <ImageView
                    android:id="@+id/favorite_btn_3"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/favorite"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/play_btn_3"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="12sp"
                    android:contentDescription="@string/play"
                    android:src="@drawable/ic_baseline_play_circle_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/favorite_btn_3"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>